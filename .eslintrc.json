{
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": "error",
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true
      }
    ]
  },
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"]
}
